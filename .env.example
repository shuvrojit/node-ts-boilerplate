# AI Linguist Environment Variables

# MongoDB connection URL
# Format: mongodb://[username:password@]host:port/database
MONGODB_URL=mongodb://localhost:27017/ai-linguist

# OpenAI API configuration
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key

# Server configuration
PORT=5000
NODE_ENV=development  # Options: development, production, test

# Logging configuration
LOG_LEVEL=info  # Options: error, warn, info, http, debug

# Authentication configuration
JWT_SECRET=your_jwt_secret_key_here  # Change this to a secure random string
JWT_ACCESS_EXPIRATION_MINUTES=30     # How long access tokens are valid
JWT_REFRESH_EXPIRATION_DAYS=30       # How long refresh tokens are valid
JWT_EXPIRES_IN=1d                    # Default token expiration

# Cookie configuration
COOKIE_SECRET=your_cookie_secret_key_here  # Change this to a secure random string
COOKIE_SECURE=false                        # Set to true in production with HTTPS